<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorAccent">@color/Orange</item>
        <!--tab được chọn thì chữ màu trắng -->
        <item name="android:textColorPrimary">#0E0E0E</item>

        <item name="android:textColor">#FDFDFD</item>
    </style>

    <style name="capfalse" parent="TextAppearance.AppCompat.Title">
        <item name="textAllCaps">false</item>
    </style>
    <style name="changecolorToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="menuitemcolor" parent="android:Theme">
        <item name="android:textColorPrimary">@color/bgToolbar</item>
        <item name="drawerArrowStyle">@style/changecolorToggledrawable</item>
    </style>
    <style name="changecolorToggledrawable" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="mauCustom" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
</resources>