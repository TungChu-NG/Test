<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    android:padding="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_6sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_8sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imHinhGioHang"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_135sdp"
            android:src="@drawable/img13"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtTieuDeGiohang"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtGiaGioHang"
                    android:layout_width="wrap_content"
                    android:textColor="#F44336"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtGiamGiaGioHang"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/imGiamSoLuongSPTrongGioHang"
                        android:padding="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_remove"
                        android:background="@color/white"/>

                    <View
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/Gray"/>
                    <TextView
                        android:id="@+id/txtSoLuongSanPham"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="1"/>
                    <View
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/Gray"/>
                    <ImageButton
                        android:id="@+id/imTangSoLuongSPTrongGioHang"
                        android:padding="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add"
                        android:background="@color/white"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imXoaSPGioHang"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_delete_24"/>
        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>
